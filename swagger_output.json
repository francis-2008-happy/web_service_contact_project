{
  "swagger": "2.0",
  "info": {
    "title": "Contacts API",
    "description": "Contacts API",
    "version": "1.0.0"
  },
  "host": "https://web-service-contact-project-1.onrender.com",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/": {
      "get": {
        "tags": [
          "home"
        ],
        "description": "Health check - Welcome page",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/contacts": {
      "get": {
        "tags": [
          "contacts"
        ],
        "description": "Get all contacts",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "_id": {
                    "example": "690bae3a445563be8c731018"
                  },
                  "username": {
                    "example": "john"
                  },
                  "email": {
                    "example": "john@gmail.com"
                  },
                  "name": {
                    "example": "John Doe"
                  },
                  "ipaddress": {
                    "example": "192.168.1.1"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "contacts"
        ],
        "description": "Create a new contact",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "example": "john"
                },
                "email": {
                  "example": "john@gmail.com"
                },
                "name": {
                  "example": "John Doe"
                },
                "ipaddress": {
                  "example": "192.168.1.1"
                }
              },
              "required": [
                "username",
                "email",
                "name",
                "ipaddress"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "example": "690bae3a445563be8c731018"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "tags": [
          "contacts"
        ],
        "description": "Get a single contact by ID",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "example": "690bae3a445563be8c731018"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "_id": {
                  "example": "690bae3a445563be8c731018"
                },
                "username": {
                  "example": "john"
                },
                "email": {
                  "example": "john@gmail.com"
                },
                "name": {
                  "example": "John Doe"
                },
                "ipaddress": {
                  "example": "192.168.1.1"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "contacts"
        ],
        "description": "Update a contact by ID",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "example": "690bae3a445563be8c731018"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "example": "john"
                },
                "email": {
                  "example": "john@gmail.com"
                },
                "name": {
                  "example": "John Doe"
                },
                "ipaddress": {
                  "example": "192.168.1.1"
                }
              },
              "required": [
                "username",
                "email",
                "name",
                "ipaddress"
              ]
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "contacts"
        ],
        "description": "Delete a contact by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "example": "690bae3a445563be8c731018"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}